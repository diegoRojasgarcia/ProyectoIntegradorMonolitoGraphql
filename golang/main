
package main

import (
    "database/sql"
    "fmt"
)

func main() {
    // Importar el controlador de la base de datos MySQL
    import _ "github.com/go-sql-driver/mysql"

    // Crear una cadena de conexión
    connStr := "postgress:ZeroZX@tcp(localhost:3306)/database"

    // Crear una conexión a la base de datos
    db, err := sql.Open("mysql", connStr)
    if err != nil {
        fmt.Println(err)
        return
    }

    // Cerrar la conexión
    defer db.Close()
}



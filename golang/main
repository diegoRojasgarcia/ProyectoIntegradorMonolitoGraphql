package main

import (
	"database/sql"
	"fmt"
)

func main() {
	// Conectarse a la base de datos
	db, err := sql.Open("mysql", "postgress:ZeroZX@tcp(localhost:3306)/DataBaseGraphql")
	if err != nil {
		panic(err)
	}

	// Ejecutar la consulta
	rows, err := db.Query("SELECT * FROM product")
	if err != nil {
		panic(err)
	}
	defer rows.Close()
	// Imprime las tres primeras filas
	for i := 0; i < 3; i++ {
		if err := rows.Next(); err != nil {
			break
		}

		var id int
		var name string
		var price float64
		var rank int

		err = rows.Scan(&id, &name, &price, &rank)
		if err != nil {
			break
		}

		fmt.Println(id, name, price, rank)
	}
}
